<Page
    x:Class="OffsiteBackupOfflineSync.UI.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OffsiteBackupOfflineSync.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="AboutPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="8">
        <ui:SimpleStackPanel
            Margin="16"
            Orientation="Vertical"
            Spacing="8">
            <TextBlock Text="autodotua" />
            <ui:HyperlinkButton NavigateUri="https://github.com/autodotua/OffsiteBackupOfflineSync">Github</ui:HyperlinkButton>
            <Button
                Width="128"
                Click="GenerateTestFilesButton_Click"
                Content="生成测试文件" />
            <Button
                Width="128"
                Click="TestButton_Click"
                Content="自动化测试" />
        </ui:SimpleStackPanel>
    </Grid>
</Page>