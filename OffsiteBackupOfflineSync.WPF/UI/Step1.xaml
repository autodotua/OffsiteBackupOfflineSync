<UserControl
    x:Class="OffsiteBackupOfflineSync.UI.Step1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OffsiteBackupOfflineSync"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <GroupBox Header="需要同步的目录">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="8" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <ListView
                    ItemsSource="{Binding Dirs}"
                    SelectedItem="{Binding SelectedDir}" />
                <ui:SimpleStackPanel Grid.Row="2"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    Spacing="8">
                    <Button
                        Click="AddDirButton_Click"
                        Content="添加目录" />
                    <Button
                        Click="RemoveDirButton_Click" IsEnabled="{Binding SelectedDir, Converter={StaticResource NotNullConverter}}"
                        Content="删除选中的目录" />
                </ui:SimpleStackPanel>
            </Grid>
        </GroupBox>
        <Grid Grid.Row="99">
            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ProgressBar IsIndeterminate="{Binding Working}"/>
            <Button Grid.Column="2" Content="导出" x:Name="btnExport" Click="ExportButton_Click"/>
        </Grid>
    </Grid>
</UserControl>
